<UserControl x:Class="IGasStation2.Views.ShowDb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGasStation2.Views"
             xmlns:components="clr-namespace:IGasStation2.Components"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <components:LabelAndTextBox ControlLabelContent="Название компании"/>
            <components:LabelAndTextBox ControlLabelContent="Местоположение компании"/>
            <components:LabelAndTextBox ControlLabelContent="Номер телефона компании"/>
            <components:LabelAndTextBox ControlLabelContent="Email"/>
            <components:LabelAndTextBox ControlLabelContent="Разрешенная к использованию мощность (кВт)"/>
            <components:LabelAndTextBox ControlLabelContent="Установленная мощность (кВт)"/>
            <components:LabelAndTextBox ControlLabelContent="Мощность дизельгенератора (кВт)"/>
            <components:LabelAndTextBox ControlLabelContent="Вид и мощность доп. резервного источника"/>
            <Button Content="Поиск"/>
            <Button Content="Очистить все"/>
        </StackPanel>
        <Separator BorderThickness="2" BorderBrush="{DynamicResource BorderBrushSeparator}" Margin="0, 5, 0, 5"/>
        <StackPanel Orientation="Vertical">
            <DataGrid Name="DbData" AutoGenerateColumns="True"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить запись"/>
                <Button Content="Открыть выбранную запись"/>
                <Button Content="Удалить выбранную запись"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
